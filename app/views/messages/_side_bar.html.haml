.chat-side
  .chat-side__side-header
    .chat-side__side-header__side-box
      %p.user-name
        =current_user.name
      %ul.menu
        %li.new-group
          = link_to new_group_path, class:"chat-side__side-header__side-box__new-group" do
            = icon('fas','edit', class: "chat-side__side-header__side-box__new-group--icon")
        %li.edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas','cog', class: "chat-side__side-header__side-box__chat-user--icon")
  .chat-side__groups
    - current_user.groups.each do |group|
      .chat-side__groups__group
        = link_to group_messages_path(group.id), class: "group-link" do
          .group-name
            = group.name
          .latest-message
            = group.show_last_message