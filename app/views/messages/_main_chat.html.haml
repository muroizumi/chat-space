.chat-main
  .chat-main__main-header
    .chat-main__main-header__header-leftbox
      %h2.chat-main__main-header__header-leftbox__current-group
        = @group.name
      %ul.chat-main__main-header__header-leftbox__member-list
        Member:
        %li.chat-main__main-header__header-leftbox__member-list__member
          - @group.users.each do |user|
            = user.name
    =link_to edit_group_path(@group),class: "chat-main__main-header__edit-btn" do
      edit

  .messages
    = render @messages


  .chat-main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'




